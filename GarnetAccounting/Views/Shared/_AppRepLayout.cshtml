<!DOCTYPE html>
@inject IBranchUserService  _branch

@{
    var branch = await _branch.GetBUserByUsernameAsync(User.Identity.Name);
}
<html lang="fa" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Icons -->
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Icons -->
    <link rel="stylesheet" href="@Url.Content("~/vendor/fonts/boxicons.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/fonts/fontawesome.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/fonts/flag-icons.css")">

    <!-- Core CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/bootsw/bootstrap.solar.rtl.min.css")" />

    <link rel="stylesheet" href="@Url.Content("~/vendor/libs/select2/select2.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/libs/datatables-bs5/datatables.bootstrap5.css")">
    <link href="@Url.Content("~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/vendor/libs/sweetalert2/sweetalert2.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/libs/typeahead-js/typeahead.css")">
    <link href="@Url.Content("~/vendor/libs/flatpickr/flatpickr.css")" rel="stylesheet" />

    <link rel="stylesheet" href="@Url.Content("~/css/AppRepstyle.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/font.css")" asp-append-version="true" />
   

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-2">
                    <img class="layoutLogo" src="~/img/Logos/2.png" alt="فناوری اطلاعات گارنت"/>
                    <h2 class="heading-section text-primary">کیهان پُست</h2>
                </div>
            </div>
        </div>

        <div class="container-fluid px-md-5 mb-2 header-line2">
            <div class="row justify-content-between">
                <div class="col-md-8 order-md-last">
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <a class="navbar-brand" href="index.html">@branch.BranchName <span>@branch.Name</span></a>
                        </div>
                        <div class="col-md-6 d-md-flex justify-content-end mb-md-0 mb-3">
                            <form action="#" class="searchform order-lg-last">
                                <div class="form-group d-flex">
                                    <input type="text" class="form-control pl-3" placeholder="جستجوی بارنامه">
                                    <button type="submit" placeholder="" class="form-control search bg-primary"><span class="fa fa-search"></span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex">
                   @*  <div class="social-media">
                        <p class="mb-0 d-flex text-primary">
                              @DateTime.Now.mdToLongPersianDate()
                        </p>
                    </div> *@
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav m-auto">
                        <li class="nav-item active"><a href="#" class="nav-link">صفحه اصلی</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">فروش</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                <a class="dropdown-item" href="#">بارداخلی</a>
                                <a class="dropdown-item" href="#">بار خارجی</a>
                                <a class="dropdown-item" href="#">بلیط هواپیما</a>
                            </div>
                        </li>
                        <li class="nav-item"><a href="#" class="nav-link">رهسپاری</a></li>
                        <li class="nav-item"><a href="#" class="nav-link">توزیع</a></li>
                        <li class="nav-item"><a href="#" class="nav-link">تنظیمات</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END nav -->

    </section>
    <div>
        @RenderBody()
        <div class="modal fade" id="appmodal" tabindex="-1" style="display: none;" aria-hidden="true">
        </div>
    </div>
    <script src="@Url.Content("~/vendor/libs/jquery/jquery.min.js")"></script>
    <script src="~/vendor/repapp/popper.js"></script>
    <script src="@Url.Content("~/js/bootsw/bootstrap.bundle.min.js")"></script>
    
     <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
    <script src="~/vendor/libs/datatables-bs5/i18n/fa.js"></script>
    <script src="~/vendor/libs/select2/select2.js"></script>
    <script src="~/vendor/libs/jdate/jdate.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr-jdate.js"></script>
    <script src="~/vendor/libs/flatpickr/l10n/fa-jdate.js"></script>

    <script src="~/vendor/repapp/main.js"></script>
    <script src="~/appfunctions/appbranch.js"></script>

    <script type="text/javascript">
    
        $(document).ready(function(){

             $(document).find('.flatpickr-input').flatpickr({
                locale: 'fa',
                altInput: true,
                altFormat: 'Y/m/d',
                allowInput: true,
                disableMobile: true
            });

            $(document).find('.select2').select2();
        });
    </script>
</body>
</html>
