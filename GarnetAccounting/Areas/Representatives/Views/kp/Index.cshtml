<div class="container">
    <section class="quickAccessMenu_section">
        <div class="quickAccessMenu_container">
            <div class="quickAccessMenu_item card border-primary">
                <a asp-action="CreateBillofladingHeader" asp-controller="Billoflading" asp-area="Courier" target="_blank">
                    <i class="bx bx-cart text-primary"></i>
                    <h4>صدرو بارنامه</h4>
                </a>
            </div>
            <div class="quickAccessMenu_item card border-secondary">
                <a asp-action="" asp-controller="" asp-area="">
                    <i class="bx bx-car text-secondary"></i>
                    <h4>عملیات توزیع</h4>
                </a>
            </div>
            <div class="quickAccessMenu_item card border-success">
                <a href="#">
                    <i class="bx bx-package text-success"></i>
                    <h4> جمع آوری و ارسال</h4>
                </a>
            </div>
            <div class="quickAccessMenu_item card border-danger">
                <a href="#">
                    <i class="bx bx-wallet text-danger"></i>
                    <h4>امور مالی</h4>
                </a>
            </div>
        </div>
    </section>
    <section class="search-section py-4">
        <h3 class="text-secondary mb-2">جستجوی بارنامه</h3>
        <form asp-action="IncomingBillsOfLading" asp-controller="kp" asp-area="Representatives" method="get" id="frmBranchPanel">
            <div class="row">
                <div class="col-md-2 col-6">
                    <label class="form-label">شماره بارنامه</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="col-md-2 col-6">
                    <label class="form-label">مبدأ</label>
                    <select type="text" class="form-select select2">
                        <option value="null"> همه</option>
                    </select>
                </div>
                <div class="col-md-2 col-6">
                    <label class="form-label">مقصد</label>
                    <select type="text" class="form-select select2">
                        <option value="null"> همه</option>
                    </select>
                </div>
                <div class="col-md-2 col-6">
                    <label class="form-label">شعبه صادر کننده</label>
                    <select type="text" class="form-select select2">
                        <option value="null"> همه</option>
                    </select>
                </div>
                <div class="col-md-2 col-6">
                    <label class="form-label">از تاریخ</label>
                    <input type="text" class="form-control flatpickr-input" />
                </div>
                <div class="col-md-2 col-6">
                    <label class="form-label">تا تاریخ</label>
                    <input type="text" class="form-control flatpickr-input" />
                </div>

            </div>
        </form>
    </section>
    <section class="currentJobs-section py-4">
        <h3 class="text-secondary mb-2">عملیات </h3>
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        بارهای صادره
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                    <div class="accordion-body">
                        <ul class="garnet__list-group">
                            @if (Model.BillsOut.Items.Count() > 0)
                            {
                                foreach (var x in Model.BillsOut.Items)
                                {
                                    string text_class = "text-info";
                                    string borderright_class = "border-right-info";
                                    short status = x.BillOfLadingStatusId;
                                    switch (status)
                                    {
                                        case 1:
                                            text_class = "text-primary";
                                            borderright_class = "border-right-primary";
                                            break;

                                        case 2:
                                            text_class = "text-success";
                                            borderright_class = "border-right-success";
                                            break;

                                        default:
                                            break;
                                    }

                                    <li class="garnet__list-group-item @borderright_class">
                                        <div class="c1">
                                            <ul>
                                                <li><label>شماره بارنامه</label><h5 class="@text_class">@x.WaybillNumber</h5></li>
                                                <li><label>صادر کننده</label><h6 class="text-light">@x.OriginBranchName</h6></li>
                                                <li><label>تاریخ</label><span>@x.IssuanceDate.LatinToPersian() - @x.IssuanceTime.ToString()</span></li>
                                                <li><label>مبلغ بارنامه</label><span></span></li>
                                                <li><label>نحوه پرداخت</label><span>@x.SettelmentTypeName</span></li>
                                            </ul>
                                            <ul>
                                                <li><label>مقصد</label><span>@x.DestinationCity</span></li>
                                                <li><label>نام گیرنده</label><span>@x.ReceiverName</span></li>
                                                <li><label>شماره تماس گیرنده</label><span></span></li>
                                                <li><label>آدرس گیرنده </label><span>@x.ReceiverAddress</span></li>

                                            </ul>
                                        </div>
                                        <div class="c2">
                                            <ul class="garnet__list-group-item_btnList">
                                                <li><a href="#" class="btn btn-sm btn-outline-danger">اعلام مشکل در بارنامه </a></li>
                                                <li><a href="#" class="btn btn-sm btn-outline-light">واگذاری به پیک</a></li>
                                                <li><a href="#" class="btn btn-sm btn-outline-info">ثبت هزینه بارنامه</a></li>
                                                <li><a asp-action="Billoflading" asp-controller="Billoflading" asp-area="Courier" asp-route-id="@x.Id" class="btn btn-sm btn-outline-success" target="_blank">مشاهده بارنامه</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        بارهای وارده
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        بارنامه های نیاز به اصلاح
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




