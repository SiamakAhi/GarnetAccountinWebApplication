@model CreateBulkInvoiceDto
@{
    ViewData["Title"] = "ورود اطلاعات گروهی صورتحساب";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string alert = ViewBag.msg;
}

<div class="container">
    <div class="card">

        <h5 class="card-header heading-color">
            ثبت فاکتور گروهی از اکسل
        </h5>
        <div class="card-body">
            <div class="alert alert-primary mb-3" role="alert">
                کاربر گرامی! شما باید لیست صورتحساب های خود را مطابق با فایل نمونه آماده و از طریق فرم زیر وارد نمایید. جهت دریافت فایل نمونه
                <a href="~/sticFiles/Garnet_SampleProduct.xlsx"><strong class="text-warning">اینجــا</strong></a>
                کلیک کنید.
            </div>

            <form asp-action="bulkCreateBuyInvoice" asp-controller="buy" asp-area="Commercial" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="InvoiceType" value="1" />
                <div class="row mt-1">
                    <div class="col-12 mb-4">
                        <label class="form-label">انتخاب فایل اکسل </label>
                        <input type="file" class="form-control" asp-for="ExcelFile" accept=".xls, .xlsx" placeholder="انتخاب اکسل حاوی اطلاعات کالا یا خدمات" />
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-check form-check-inline">
                            <input asp-for="JustTaxable" class="form-check-input" type="checkbox">
                            <label class="form-check-label" asp-for="JustTaxable">
                                فقط فاکتورهای رسمی (فقط فاکتورهایی که دارای کد ملی خریدار/فروشنده هستند درج می شوند)
                            </label>
                        </div>
                    </div>
                    <div class="mt-2">
                        <input type="button" class="btn btn-primary mb-2 accAjaxSubmit" value="دریافت و ثبت اطلاعات" />
                        <a class="btn btn-warning mb-2" asp-action="Invoices" asp-controller="buy" asp-area="Commercial">لیست فاکتورهای خرید </a>
                    </div>
                </div>
            </form>

            <div>

                @if (!string.IsNullOrEmpty(alert))
                {
                    <div class="alert alert-info alert-dismissible mt-4" role="alert">
                        <h6 class="alert-heading mb-1"><i class="bx bx-xs bx-detail me-2"></i>کاربر گرامی !</h6>
                        <span>
                            @Html.Raw(alert)
                        </span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                }

            </div>
        </div>
    </div>
</div>


